{
  "manifest_version": 2,
  "name": "RemindTabs",
  "description": "Reopen the currently viewed website at the specified date and time.",
  "version": "0.0.5",
  "icons": {
    "64": "icons/icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mozilla.org/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browserAction.html",
    "default_title": "RemindTabs"
  },
  "page_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "pageAction.html",
    "default_title": "RemindTabs",
    "show_matches": [
        "*://*/*"
    ]
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "notifications",
    "storage",
    "idle"
  ]
}
